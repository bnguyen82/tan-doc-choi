	 	<action  path="/home" 
	             type="com.tandoc.actions.HomeAction" 
	             input="/home.do"
	             name="loginForm">
	             <forward name="success" path="/WEB-INF/pages/homelogin.jsp"/>
	             <forward name="failure" path="/WEB-INF/pages/home.jsp"/>
	    </action>             
