<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE struts-config PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
	"../dtd/struts-config_1_2.dtd">
<!-- "http://struts.apache.org/dtds/struts-config_1_2.dtd" -->
<struts-config>
	<form-beans>
		<form-bean name="homeForm" type="com.tandoc.forms.HomeForm" />
		<form-bean name="loginForm" type="com.tandoc.forms.LoginForm" />		
	</form-beans>
	
	 <global-forwards>
	 	<forward name="/login" path="/login.do?method=init"></forward>
	 </global-forwards>
	 	
	<action-mappings>
	 	<action  path="/home" 
	 			 parameter="method"
	             type="com.tandoc.actions.HomeAction" 
	             input="/home.do"
	             validate="false"
	             name="homeForm">	             
	             <forward name="success" path="/pages/home.jsp"/>
	    </action>                   	
	    <action  path="/login" 
	    		 parameter="method"
	             type="com.tandoc.actions.LoginAction" 
	             input="/login.do"
	             validate="false"
	             name="loginForm">
	             <forward name="success" path="/pages/login.jsp"/>
	             <forward name="failure" path="/pages/login.jsp"/>
	    </action>                   	
	 </action-mappings>

<!--
	<plug-in className="org.apache.struts.tiles.TilesPlugin">
